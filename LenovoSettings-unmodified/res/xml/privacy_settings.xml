<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/privacy_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/backup_section_title" android:key="backup_category">
        <CheckBoxPreference android:persistent="false" android:title="@string/backup_data_title" android:key="backup_data" android:summary="@string/backup_data_summary" />
        <PreferenceScreen android:persistent="false" android:title="@string/backup_configure_account_title" android:key="configure_account" android:summary="@string/backup_configure_account_default_summary">
            <intent android:action="dummy" />
        </PreferenceScreen>
        <CheckBoxPreference android:persistent="false" android:title="@string/auto_restore_title" android:key="auto_restore" android:summary="@string/auto_restore_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/backup_data_recovery_section_title" android:key="backup_recovery_data_category">
        <CheckBoxPreference android:persistent="false" android:title="@string/backup_recovery_data_title" android:key="backup_recovery_data" android:summary="@string/backup_recovery_data_summary" />
        <PreferenceScreen android:title="@string/backup_data_to_sdcard_title" android:key="key_backup_data_sdcard" android:summary="@string/backup_data_to_sdcard_summary" android:dependency="backup_recovery_data" />
        <PreferenceScreen android:title="@string/recovery_data_title" android:key="key_recovery_data_sdcard" android:summary="@string/recovery_data_summary" android:dependency="backup_recovery_data" />
        <PreferenceScreen android:title="@string/fuse_backup_data_to_cloud_title" android:key="key_backup_data_cloud" android:summary="@string/fuse_backup_data_to_cloud_summary" android:dependency="backup_recovery_data" />
        <PreferenceScreen android:title="@string/fuse_recovery_data_from_cloud_title" android:key="key_recovery_data_cloud" android:summary="@string/fuse_recovery_data_from_cloud_summary" android:dependency="backup_recovery_data" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/device_section_title" android:key="device_category">
        <PreferenceScreen android:title="@string/backup_data_to_device_title" android:key="key_backup_data_device" android:summary="@string/backup_data_to_device_summary" />
        <PreferenceScreen android:title="@string/recovery_data_from_device_title" android:key="key_recovery_data_device" android:summary="@string/recovery_data_from_device_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/personal_data_section_title" />
    <PreferenceScreen android:layout="@layout/lenovo_preference_reset_headers" android:title="@string/reset_headers_title" android:key="key_reset_headers" android:summary="@string/reset_headers_summary" />
    <PreferenceScreen android:id="@id/master_clear_recent_id" android:title="@string/master_clear_title" android:key="master_clear" android:summary="@string/master_clear_summary" android:fragment="com.android.settings.MasterClear" />
</PreferenceScreen>