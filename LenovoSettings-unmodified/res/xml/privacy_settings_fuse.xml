        <PreferenceScreen android:title="@string/privacy_restore_userdata_title_cloud" android:key="lenovo_restore_data_cloud" android:summary="@string/privacy_restore_userdata_summary_cloud" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/personal_data_section_title" />
    <PreferenceScreen android:title="@string/drm_settings_title" android:key="drm_settings" android:summary="@string/drm_settings_summary" android:fragment="com.mediatek.settings.DrmSettings" />
