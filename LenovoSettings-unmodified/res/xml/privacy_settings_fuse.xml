        </PreferenceScreen>
        <CheckBoxPreference android:persistent="false" android:title="@string/auto_restore_title" android:key="auto_restore" android:summary="@string/auto_restore_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/privacy_category_title_sd">
        <PreferenceScreen android:title="@string/privacy_backup_userdata_title" android:key="lenovo_backup_data" android:summary="@string/privacy_backup_userdata_summary" />
